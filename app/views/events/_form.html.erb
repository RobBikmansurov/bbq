<%= form_for(event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: event} %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <%= f.text_field :datetime,
                     autocomplete: 'off',
                     value: l(event.datetime, format: :short),
                     class: 'datepicker-here form-control',
                     'data-timepicker' => true,
                     'data-minutes-step' => '5' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, class: 'form-control', autocomplete: 'off' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
